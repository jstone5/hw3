<h1><%= @place.name %></h1>

<% for post in @place.posts %>
    <h2><%= post.title %></h2>
    <br>
    <h6><%= post.posted_on %></h6>
    <br>
    <p><%= post.description %></p>
    <br>
<% end %>

<a href="/posts/new?place_id=<%= @place.id %>">Add Post in <%= @place.name %></a>
